root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 2
indent_style = tab
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[*.css]
indent_size = 4
indent_style = tab
tab_width = 4

[*.scss]
indent_style = tab
tab_width = 4

[{*.ant,*.fxml,*.jhm,*.jnlp,*.jrxml,*.rng,*.tld,*.wsdl,*.xml,*.xsd,*.xsl,*.xslt,*.xul}]
indent_size = 4
indent_style = tab
tab_width = 4

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,jest.config}]
indent_style = tab
tab_width = 4

[{*.markdown,*.md}]
indent_size = 4
indent_style = tab
tab_width = 4
